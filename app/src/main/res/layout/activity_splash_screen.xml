<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode_color"
    android:divider="@drawable/empty_divider"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".ui.splashActivity.SplashScreen"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:background="@drawable/hub_icon"
        android:contentDescription="@string/hub_icon"
        app:tint="@color/white"
        />

    <include
        android:id="@+id/hub_splash_error"
        layout="@layout/hub_splash_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>